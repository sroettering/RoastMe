$view-background1       = #e0e0e0
$view-background2       = #bdbdbd
$view-opacity1          = 1
$view-opacity2          = .6
$view-text1             = rgba(0,0,0,$view-opacity1)
$view-text2             = rgba(0,0,0,$view-opacity2)
