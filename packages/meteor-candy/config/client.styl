$font-normal-family     = "Helvetica Neue", sans-serif
$font-normal-weight     = normal

$font-bold-family       = "Helvetica Neue", sans-serif
$font-bold-weight       = bold

$font-size              = 16px
$line-height            = 24px

$modal-width            = 800px
$modal-height           = 495px
$row-height             = 42px

$overlay-background     = rgba(4,17,23,.9)

$base-background1       = #21475e
$base-background2       = #0f3148
$base-opacity1          = 1
$base-opacity2          = .6
$base-text1             = rgba(255,255,255,$base-opacity1)
$base-text2             = rgba(255,255,255,$base-opacity2)
